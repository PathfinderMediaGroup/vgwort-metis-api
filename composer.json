{
  "name": "pathfindermediagroup/vgwort-metis-api",
  "description": "A php library to use the VGWort METIS api.",
  "type": "library",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Woeler",
      "email": "woeler@woeler.eu"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-curl": "*",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.8"
  },
  "autoload": {
    "psr-4": {
      "PathfinderMediaGroup\\VgwortMetisApi\\": "src/"
    }
  },
  "scripts": {
    "cgl": [
      "bin/php-cs-fixer fix --config .php-cs-fixer.php"
    ]
  },
  "config": {
    "bin-dir": "bin/"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.8"
  }
}
